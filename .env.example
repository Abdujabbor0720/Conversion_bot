# Telegram Bot Token (BotFather'dan olingan token)
BOT_TOKEN=your_bot_token_here

# Maksimal fayl hajmi (100MB)
MAX_FILE_SIZE=104857600

# Vaqtinchalik papkalar
TEMP_DIR=temp
DOWNLOADS_DIR=downloads

# Admin ma'lumotlari
ADMIN_USERNAME=your_admin_username
ADMIN_ID=your_admin_telegram_id

# Majburiy kanal (ixtiyoriy)
REQUIRED_CHANNEL_ID=your_channel_id
REQUIRED_CHANNEL_USERNAME=your_channel_username

# Debug rejimi (true/false)
DEBUG_MODE=false

# Server port (agar webhook ishlatilsa)
PORT=3000

# Webhook URL (agar webhook ishlatilsa)
WEBHOOK_URL=https://your-domain.com/webhook
